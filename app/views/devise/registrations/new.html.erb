<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group" data-no-turbolink>
    <div class='form-text-wrap'>
      <label class="form-text", for="user_name">名前</label>
      <span class="indispensable">必須</span>
      <span id="name-error-message">※名前を入力してください</span>
    </div>
    <%= f.text_area :name, class:"input-default", placeholder:"例) musical夫", maxlength:"40" %>
  </div>
  <div class="form-group" data-no-turbolink>
    <div class='form-text-wrap'>
      <label class="form-text", for="user_email">メールアドレス</label>
      <span class="indispensable">必須</span>
      <span id="email-error-message1">※Emailを入力してください</span>
      <span id="email-error-message2">※Emailの形式では無いようです</span>
    </div>
    <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group" data-no-turbolink>
    <div class='form-text-wrap'>
      <label class="form-text", for="user_password">パスワード</label>
      <span class="indispensable">必須</span>
      <span id="password-error-message1">※パスワードを入力して下さい</span>
      <span id="password-error-message2">※英字と数字の両方を含めて設定してください</span>
      <span id="password-error-message3">※6文字以上で設定してください</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group" data-no-turbolink>
    <div class='form-text-wrap'>
      <label class="form-text", for="user_password_confirmation">パスワード(確認)</label>
      <span class="indispensable">必須</span>
      <span id="password-confirmation-error-message">※同じパスワードを入力して下さい</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text", for="user_instrument">興味のある楽器</label>
    </div>
    <%= f.text_area :instrument, class:"input-default", placeholder:"例) クラリネット", maxlength:"40" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-blue-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>