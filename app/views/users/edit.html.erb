<%= render "shared/second-header"%>

<div class='account-page'>
  <div class='account-page_header'>
    <h2>アカウントの編集</h2>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
    <%= link_to "マイページに戻る", user_path, class: 'btn'%>
  </div>
  <div class='user-form'>
    <%= form_with model: current_user, local: true do |f|%>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :name%>
        </div>
        <div class='field-input'>
          <%= f.text_field :name, autofocus: true%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :email%>
        </div>
        <div class='field-input'>
          <%= f.email_field :email%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :instrument%>
        </div>
        <div class='field-input'>
          <%= f.text_field :instrument, autofocus: true%>
        </div>
      </div>
      <div class='actions'>
        <%= f.submit "編集する", class: 'submit-btn'%>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer"%>