<header class='top-page-header'>
  <div class='bar-contents'>
    <%= link_to image_tag(asset_path("amusic-logo-question.png"), class: "amusic-icon"), "/" %>
      <%= form_with(url: search_chats_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "質問を検索する", class: "input-box" %>
        <%= form.submit type: "image", src: "assets/search.png", alt: "検索", class: "search-button" %>
      <% end %>
  </div>
  <div class='nav'>
    <div class='lists-left'>
      みんなの質問ページ
    </div>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.name, "users/show", class: "users-name" %></li>
      <% else %>
        <li><%= link_to 'ログイン', "users/sign_in", class: "login" %></li>
        <li><%= link_to '新規登録', "users/sign_up", class: "login" %></li>
      <% end %>
      <li><%= link_to "トップページに戻る", root_path, class: "root-btn"%></li>
    </ul>
  </div>
</header>