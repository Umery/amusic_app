<header class='top-page-header'>
  <div class='bar-contents'>
    <%= link_to image_tag("amusic-logo-question.png", class: "amusic-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='質問を検索する'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <div class='lists-left'>
      みんなの質問ページ
    </div>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.name, "users/show", class: "users-name" %></li>
        <li><%= link_to "トップページに戻る", root_path, class: "root-btn"%></li>
      <% else %>
        <li><%= link_to 'ログイン', "users/sign_in", class: "login" %></li>
        <li><%= link_to '新規登録', "users/sign_up", class: "login" %></li>
        <li><%= link_to "トップページに戻る", root_path, class: "root"%></li>
    <% end %>
    </ul>
  </div>
</header>